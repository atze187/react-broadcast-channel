{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "es6": true
  },
  "extends": ["prettier"],
  "plugins": ["prettier", "react", "typescript"],
  "rules": {
    "arrow-spacing": "error",
    "comma-spacing": "warn",
    "newline-before-return": "error",
    "no-var": "error",
    "react/jsx-uses-vars": "error",
    "no-return-assign": "error",
    "no-undef": "error"
  }
}
