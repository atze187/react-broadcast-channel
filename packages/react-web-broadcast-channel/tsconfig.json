{
 "compilerOptions": {
     "lib": ["DOM","ESNext","DOM.Iterable"],
    "rootDir": "./src",
    "outDir": "./lib",
    "checkJs": true,
    "allowSyntheticDefaultImports" : true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "jsx": "react",
    "target": "ES5",
    "module": "CommonJS",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true
 },
 "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
 ],
 "exclude": [
     "node_modules",
     "./src/**/*.test.*"
 ]
}